<div>
  <a class="hiddenanchor" id="signin"></a>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %> "><%= value %>
            <div>
            <% end %>
            <%# render "users/shared/links" %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <h1>Login </h1>
              <div>
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control" %>
              </div>
              <div>
                <%= f.password_field :password, placeholder:"Senha", class: "form-control" %>
              </div>
              <div>
                <% if devise_mapping.rememberable? %>
                  <div class="text-right">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
                <%= f.submit "Entrar", class:"btn btn-light bg-light"%>
                <%= link_to 'Esqueceu a senha?',new_user_password_path , class:"reset_pass" %>
              </div>
              <div class="clearfix"></div>
              <div class="separator">
                <p class="change_link">New to site?
                  <%= link_to 'Crie uma conta',new_user_registration_path , class:"to_register" %>
                </p>
                <div class="clearfix"></div>
                <br />
                <div>
                  <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                  <p>Â©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                </div>
              </div>
            <%    end %>
          </section>
        </div>
      </div>
    </div>
