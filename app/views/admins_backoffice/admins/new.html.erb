<h1 class="h3 mb-4 text-gray-800">Cadastrando</h1>
<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <% @admin.errors.full_messages.each do |message_erro| %>
      <ul>
        <li >
          <%= message_erro %>
        </li>
      </ul>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
<%= form_with model: [:admins_backoffice, @admin] do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.text_field :password, class:"form-control", type:"password" %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation,  class:"form-control", type:"password" %>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
