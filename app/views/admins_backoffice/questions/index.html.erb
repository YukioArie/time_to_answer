<h1 class="h3 mb-4 text-gray-800">Listando Perguntas</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= translate_attribute(@questions, :id) %></th>
        <th><%= translate_attribute(@questions, :description) %></th>
        <th><%= translate_attribute(@questions, :subject) %></th>
        <th scope="col ">
          <%= link_to new_admins_backoffice_question_path, type:"button", class:"btn btn-success" do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <th scope="row"><%= question.id %></th>
          <td><%= question.description.truncate(100) %></td>
          <td><%= question.subject.description.truncate(30)  %></td>
          <td>
            <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-primary btn-circle" do  %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir?" }  do %>
              <i class="fas fa-trash"></i>
            <% end%></td>
        </tr>
      <% end%>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @questions %>
  </div>
</div>
