<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Login Administrativo</h1>
                <% flash.each do |key, value| %>
                  <div class="flash <%= key %> "><%= value %>
                    <div>
                    <% end %>
                  </div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"user") do |f| %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, placeholder:"Enter Email Address...", class:"form-control form-control-user", id:"exampleInputEmail", 'aria-describedby': "emailHelp" %>
                    </div>
                    <div class="form-group">
                      <%= f.password_field :password, placeholder: "Password", class:"form-control form-control-user", id:"exampleInputPassword" %>
                    </div>
                    <% if devise_mapping.rememberable? %>
                      <div class="form-group">
                        <label>
                          <%= f.check_box :remember_me %>  Lembrar-me
                        </label>
                      </div>
                    <% end %>
                    <%= f.submit "Log in", class:"btn btn-primary btn-user btn-block" %>
                  <% end %>
                  <hr>
                  <div class="text-center">
                    <a class="small" href="forgot-password.html">Forgot Password?</a>
                  </div>
                  <div class="text-center">
                    <a class="small" href="register.html">Create an Account!</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%# render "admins/shared/links" %>
